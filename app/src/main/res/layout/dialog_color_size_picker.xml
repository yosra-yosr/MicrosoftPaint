<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couleurs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Première rangée de couleurs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/color_black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Noir"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_dark_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Gris foncé"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Gris"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_light_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Gris clair"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_white"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Blanc"
            android:layout_margin="6dp" />
    </LinearLayout>

    <!-- Deuxième rangée de couleurs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/color_red"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Rouge"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_orange"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Orange"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_yellow"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Jaune"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_green"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Vert"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_cyan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Cyan"
            android:layout_margin="6dp" />
    </LinearLayout>

    <!-- Troisième rangée de couleurs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/color_blue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Bleu"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_purple"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Violet"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_pink"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Rose"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_brown"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Marron"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_beige"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Beige"
            android:layout_margin="6dp" />
    </LinearLayout>

    <!-- Quatrième rangée de couleurs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/color_magenta"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Magenta"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_teal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Turquoise"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_olive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Olive"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_navy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Marine"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/color_lavender"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/circle_color"
            android:background="@drawable/circle_background"
            android:contentDescription="Lavande"
            android:layout_margin="6dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taille"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <View
        android:id="@+id/size_example"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fin"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/size_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="50"
            android:progress="10"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Épais"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="18sp"
        android:padding="12dp" />

</LinearLayout>